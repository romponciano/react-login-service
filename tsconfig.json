{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": false,
        "lib": ["es6", "dom", "es2016", "es2017"],
        "jsx": "react",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src", "src/index.d.tsx"],
    "exclude": ["node_modules"]
}